{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node", "mocha"],
        "downlevelIteration": true,
        "noEmitOnError": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}